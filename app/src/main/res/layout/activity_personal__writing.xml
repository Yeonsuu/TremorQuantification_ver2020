<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/survey_thema">

        <TextView
            android:id="@+id/clinic_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="105dp"
            android:text="11111111"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="105dp"
            android:text="김한동"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/clinic_ID"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="137dp"
            android:text="CRTS 11. 글쓰기"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/today_date"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="172dp"
            android:text="2019.08.20 04:12"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <Button
            android:id="@+id/gotohome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="19.5dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gotohome2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="53dp"
            android:text="@string/hhh"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="700dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/short_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/writing_image_result"
            android:layout_width="694.32dp"
            android:layout_height="287.3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>