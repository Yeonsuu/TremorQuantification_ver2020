<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:background="@drawable/survey_thema">

        <TextView
            android:id="@+id/clinic_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="105dp"
            android:text="11111111"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="105dp"
            android:text="김한동"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/clinic_ID"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="137dp"
            android:text="Spiral Result"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/today_date"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="172dp"
            android:text="2019.08.20 04:12"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <Button
            android:id="@+id/gotohome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="19.5dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gotohome2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="53dp"
            android:text="@string/hhh"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="700dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/short_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id = "@+id/present_spiral"
            android:rotation="90"
            android:layout_width="277.92dp"
            android:layout_height="287.3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spiral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="700dp"
            android:layout_height="108.33dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="580dp"
            android:src="@drawable/spiral_result3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/hz_score"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="635dp"
            android:gravity="center"
            android:text="4"
            android:textColor="#37BFA7"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/magnitude_score"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="635dp"
            android:gravity="center"
            android:text="0.5"
            android:textColor="#37BFA7"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/distance_score"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_marginStart="342dp"
            android:layout_marginTop="635dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#37BFA7"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/time_score"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:layout_marginStart="483dp"
            android:layout_marginTop="635dp"
            android:gravity="center"
            android:text="3"
            android:textColor="#37BFA7"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/speed_score"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="607dp"
            android:layout_marginTop="635dp"
            android:gravity="center"
            android:text="12"
            android:textColor="#37BFA7"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/spiral_result_button"
            android:layout_width="725dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="730dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spiral_pre_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/spiral_result_layout"
            android:layout_width="700dp"
            android:layout_height="460dp"
            android:layout_marginStart="36dp"
            android:background="#F6F6F6"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spiral_result_button">


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="떨림의 주파수" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="떨림의 세기" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벗어난 거리" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검사 수행 시간" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검사 평균 속도" />
            </android.support.design.widget.TabLayout>

            <FrameLayout
                android:id="@+id/spiral_graph"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout">

            </FrameLayout>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spiral_result_layout">

        </View>

    </android.support.constraint.ConstraintLayout>
</ScrollView>